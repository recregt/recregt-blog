# Ignore generated files from language statistics
public/* linguist-generated=true

# Mark theme files as vendored (third-party)
themes/* linguist-vendored=true

# Mark Hugo template files properly
layouts/**/*.html linguist-language=HTML

# Mark config files
*.toml linguist-language=TOML
*.yaml linguist-language=YAML
*.yml linguist-language=YAML

# Mark markdown content
content/**/*.md linguist-language=Markdown