# Ignore generated files from language statistics
public/* linguist-generated=true

# Mark Hugo template files properly
layouts/**/*.html linguist-language=HTML
themes/**/*.html linguist-language=HTML

# Ensure Go templates are recognized
*.html linguist-detectable=false
layouts/**/*.html linguist-detectable=true
themes/**/*.html linguist-detectable=true

# Mark config files
*.toml linguist-language=TOML
*.yaml linguist-language=YAML
*.yml linguist-language=YAML

# Mark markdown content
content/**/*.md linguist-language=Markdown